<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:ignore="MissingConstraints"
tools:context=".Activity.ConfiguracionActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:text="Tu perfil"
    android:textAlignment="center"
    android:textColor="@color/colorPrimary"
    android:textSize="30dp"
    android:gravity="center_horizontal" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reUser"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/seusuario"
        app:layout_constraintBottom_toTopOf="@+id/regName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="10dp"
        android:text="Nombre"
        android:textColor="#070707"
        android:textSize="20dp" />
<TextView
    android:id="@+id/nombrePersona"
    android:layout_width="match_parent"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:textColor="#070707"
    android:textSize="20dp" />
    <TextView
        android:id="@+id/textapellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="10dp"
        android:text="Apellidos"
        android:textColor="#070707"
        android:textSize="20dp" />
<TextView
    android:id="@+id/apellidoPersona"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="28dp"
    android:textColor="#070707"
    android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="10dp"
        android:text="Edad"
        android:textColor="#070707"
        android:textSize="20dp" />
<TextView
    android:id="@+id/edadPersona"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:textColor="#070707"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:textSize="20dp" />
    <TextView
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="10dp"
        android:text="Correo"
        android:textColor="#070707"
        android:textSize="20dp" />
<TextView
    android:id="@+id/correoPersona"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#070707"
    android:layout_marginLeft="28dp"
    android:layout_marginBottom="10dp"

    android:layout_marginRight="28dp"
    android:textSize="20dp" />




<Button
    android:id="@+id/guardarDatos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginBottom="30dp"
    android:textColor="#fffdf9"
    android:text="GUARDAR"
    android:background="@drawable/boton_redondo"
    >

</Button>





</LinearLayout>